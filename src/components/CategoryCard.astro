---
interface Props {
	id: string;
	title: string;
	titleKey?: string;
	countId: string;
	countText: string;
	countTextKey?: string;
	gradient: string;
}

const { id, title, titleKey, countId, countText, countTextKey, gradient } = Astro.props;
---

<button
	id={id}
	class="focusable category-card group rounded-xl md:rounded-2xl border border-white/10 bg-white/5 p-4 md:p-8 hover:bg-white/10 hover:border-indigo-500/50 transition-all duration-300 flex flex-col items-center justify-center gap-3 md:gap-4 h-full min-h-[160px] md:min-h-0"
>
	<div
		class={`w-16 h-16 md:w-24 md:h-24 rounded-xl md:rounded-2xl bg-gradient-to-br ${gradient} flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform`}
	>
		<slot />
	</div>
	<div class="text-center">
		<h2 class="text-lg md:text-2xl font-bold mb-1 leading-tight" data-i18n={titleKey}>
			{title}
		</h2>
		<p
			id={countId}
			class="text-sm md:text-base text-gray-400 leading-tight"
			data-count-text-key={countTextKey}
		>
			-- <span data-i18n={countTextKey}>{countText}</span>
		</p>
	</div>
</button>
