---
// Login Screen Component
---

<div
	id="login-screen"
	class="hidden min-h-screen flex flex-col p-4 pt-6 md:pt-8"
>
	<!-- Language Switcher - Top Right -->
	<div class="flex justify-end mb-4 md:mb-6">
		<div class="flex gap-2">
			<button
				id="login-lang-tr"
				class="focusable login-lang-btn px-3 py-1.5 md:px-4 md:py-2 rounded-lg border border-white/10 bg-white/5 text-xs font-semibold hover:bg-white/10 transition active"
				data-lang="tr"
			>
				ðŸ‡¹ðŸ‡· TR
			</button>
			<button
				id="login-lang-en"
				class="focusable login-lang-btn px-3 py-1.5 md:px-4 md:py-2 rounded-lg border border-white/10 bg-white/5 text-xs font-semibold hover:bg-white/10 transition"
				data-lang="en"
			>
				ðŸ‡¬ðŸ‡§ EN
			</button>
		</div>
	</div>

	<div class="w-full max-w-md mx-auto">
		<div class="text-center mb-4 md:mb-6">
			<div
				class="inline-flex size-12 md:size-14 items-center justify-center rounded-2xl bg-gradient-to-br from-indigo-500 to-fuchsia-600 shadow-lg mb-2 md:mb-3"
			>
				<img src="/logo-192.png" alt="TIPTV" class="w-7 h-7 md:w-8 md:h-8" />
			</div>
			<h1 class="text-xl md:text-2xl font-bold mb-1" data-i18n="app.title">TIPTV</h1>
			<p class="text-xs md:text-sm text-gray-400" data-i18n="app.subtitle">Enter your IPTV credentials</p>
		</div>

		<form
			id="login-form"
			class="space-y-2.5 md:space-y-3 rounded-xl md:rounded-2xl border border-white/10 bg-white/5 p-3 md:p-5 backdrop-blur"
		>
			<div class="flex gap-2">
				<select
					id="protocol"
					class="focusable w-24 md:w-28 h-10 md:h-11 rounded-lg md:rounded-xl border border-white/10 bg-white/5 pl-2 md:pl-3 text-sm md:text-base text-white outline-none focus:border-indigo-400/30 focus:ring-2 focus:ring-indigo-500/40"
				>
					<option value="http" data-i18n="login.http">HTTP</option>
					<option value="https" data-i18n="login.https">HTTPS</option>
				</select>
				<input
					id="host"
					type="text"
					value=""
					placeholder="example.com:8080"
					data-i18n-placeholder="login.host"
					class="focusable flex-1 h-10 md:h-11 rounded-lg md:rounded-xl border border-white/10 bg-white/5 px-3 text-sm md:text-base text-white placeholder:text-gray-400 outline-none focus:border-indigo-400/30 focus:ring-2 focus:ring-indigo-500/40"
				/>
			</div>
			<input
				id="user"
				type="text"
				value=""
				placeholder="Username"
				data-i18n-placeholder="login.username"
				class="focusable w-full h-10 md:h-11 rounded-lg md:rounded-xl border border-white/10 bg-white/5 px-3 text-sm md:text-base text-white placeholder:text-gray-400 outline-none focus:border-indigo-400/30 focus:ring-2 focus:ring-indigo-500/40"
			/>
			<input
				id="pass"
				type="password"
				value=""
				placeholder="Password"
				data-i18n-placeholder="login.password"
				class="focusable w-full h-10 md:h-11 rounded-lg md:rounded-xl border border-white/10 bg-white/5 px-3 text-sm md:text-base text-white placeholder:text-gray-400 outline-none focus:border-indigo-400/30 focus:ring-2 focus:ring-indigo-500/40"
			/>
			<button
				id="login-submit"
				type="submit"
				data-i18n="login.submit"
				class="focusable w-full h-10 md:h-11 rounded-lg md:rounded-xl bg-gradient-to-br from-indigo-500 to-fuchsia-600 font-semibold text-sm md:text-base text-white shadow-lg hover:brightness-110 transition"
			>
				Login
			</button>
		</form>

		<!-- Info Section -->
		<div class="mt-4 md:mt-5 space-y-2 md:space-y-2.5">
			<div class="flex items-start gap-2 text-xs md:text-sm text-gray-400">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400 mt-0.5 shrink-0"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
				<p data-i18n="app.info.privacy">Your data is stored only on your device, never sent anywhere.</p>
			</div>
			<div class="flex items-start gap-2 text-xs md:text-sm text-gray-400">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-400 mt-0.5 shrink-0"><path d="M6 3h12l4 6-10 13L2 9Z"/><path d="M11 3 8 9l4 13 4-13-3-6"/></svg>
				<p data-i18n="app.info.free">Completely free and open source application.</p>
			</div>
			<div class="flex items-start gap-2 text-xs md:text-sm text-orange-400">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-0.5 shrink-0"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><path d="M12 9v4"/><path d="M12 17h.01"/></svg>
				<p data-i18n="app.info.https">HTTP connections don't work in web version. Please request HTTPS address from your service provider.</p>
			</div>
			<div class="flex items-start gap-2 text-xs md:text-sm text-yellow-400">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-0.5 shrink-0"><circle cx="12" cy="12" r="10"/><path d="M12 8v4"/><path d="M12 16h.01"/></svg>
				<p data-i18n="app.info.legal">Illegal IPTV usage is a crime. Please use legal content providers.</p>
			</div>
		</div>

		<!-- Downloads Section -->
		<div class="mt-6 md:mt-8 space-y-3 md:space-y-4">
			<div class="text-center">
				<h2 class="text-lg md:text-xl font-semibold mb-1" data-i18n="downloads.title">Download App</h2>
				<p class="text-xs md:text-sm text-gray-400" data-i18n="downloads.subtitle">Use on all platforms</p>
			</div>
			
			<div class="grid grid-cols-2 gap-2 md:gap-3">
				<!-- Android APK -->
				<a
					href="/downloads/tiptv-android.apk"
					class="focusable flex flex-col items-center p-3 md:p-4 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 transition group"
					download
				>
					<div class="w-8 h-8 md:w-10 md:h-10 mb-2 text-green-400 group-hover:scale-110 transition">
						<svg viewBox="0 0 24 24" fill="currentColor">
							<path d="M17.523 15.3414c-.5665 0-.9726-.4061-.9726-.9726s.4061-.9726.9726-.9726.9726.4061.9726.9726-.4061.9726-.9726.9726zm-11.046 0c-.5665 0-.9726-.4061-.9726-.9726s.4061-.9726.9726-.9726.9726.4061.9726.9726-.4061.9726-.9726.9726zm11.405-6.7222L13.4042 3.8906c-.203-.3248-.6086-.4248-.9334-.2218-.3248.203-.4248.6086-.2218.9334L16.7608 9.619H7.2392l4.5118-5.0188c.203-.3248.1030-.7304-.2218-.9334-.3248-.203-.7304-.1030-.9334.2218L6.1370 8.6192C5.0803 8.8222 4.2969 9.8789 4.2969 11.1406v6.0938c0 1.4531 1.1719 2.625 2.625 2.625h9.1562c1.4531 0 2.625-1.1719 2.625-2.625v-6.0938c0-1.2617-.7834-2.3184-1.8401-2.5214z"/>
						</svg>
					</div>
					<span class="text-xs md:text-sm font-medium" data-i18n="downloads.android">Android APK</span>
				</a>

				<!-- Windows -->
				<a
					href="/downloads/tiptv-windows.msi"
					class="focusable flex flex-col items-center p-3 md:p-4 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 transition group"
					download
				>
					<div class="w-8 h-8 md:w-10 md:h-10 mb-2 text-blue-400 group-hover:scale-110 transition">
						<svg viewBox="0 0 24 24" fill="currentColor">
							<path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-13.051-1.351"/>
						</svg>
					</div>
					<span class="text-xs md:text-sm font-medium" data-i18n="downloads.windows">Windows</span>
				</a>

				<!-- macOS -->
				<a
					href="/downloads/tiptv-macos.dmg"
					class="focusable flex flex-col items-center p-3 md:p-4 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 transition group"
					download
				>
					<div class="w-8 h-8 md:w-10 md:h-10 mb-2 text-gray-300 group-hover:scale-110 transition">
						<svg viewBox="0 0 24 24" fill="currentColor">
							<path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
						</svg>
					</div>
					<span class="text-xs md:text-sm font-medium" data-i18n="downloads.macos">macOS</span>
				</a>

				<!-- Linux -->
				<a
					href="/downloads/tiptv-linux.AppImage"
					class="focusable flex flex-col items-center p-3 md:p-4 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 transition group"
					download
				>
					<div class="w-8 h-8 md:w-10 md:h-10 mb-2 text-orange-400 group-hover:scale-110 transition">
						<svg viewBox="0 0 24 24" fill="currentColor">
							<path d="M12.504 0c-.155 0-.315.008-.48.021-4.226.333-3.105 4.807-3.17 6.298-.076 1.092-.3 1.953-1.05 3.02-.885 1.051-2.127 2.75-2.716 4.521-.278.832-.41 1.684-.287 2.489a.424.424 0 00-.11.135c-.26.268-.45.6-.663.839-.199.199-.485.267-.797.4-.313.136-.658.269-.864.68-.09.189-.136.394-.132.602 0 .199.027.4.055.536.058.399.116.728.04.97-.249.68-.28 1.145-.106 1.484.174.334.535.47.94.601.81.2 1.91.135 2.774.6.926.466 1.866.67 2.616.47.526-.116.97-.464 1.208-.946.587-.003 1.23-.269 2.26-.334.699-.058 1.574.267 2.577.2.025.134.063.198.114.333l.003.003c.391.778 1.113 1.132 1.884 1.071.771-.06 1.592-.536 2.257-1.306.631-.765 1.683-1.084 2.378-1.503.348-.199.629-.469.649-.853.023-.4-.2-.811-.714-1.376v-.097l-.003-.003c-.17-.2-.25-.535-.338-.926-.085-.401-.182-.786-.492-1.046h-.003c-.059-.054-.123-.067-.188-.135a.357.357 0 00-.19-.064c.431-1.278.264-2.55-.173-3.694-.533-1.41-1.465-2.638-2.175-3.483-.796-1.005-1.576-1.957-1.56-3.368.026-2.152.236-6.133-3.544-6.139zm.529 3.405h.013c.213 0 .396.062.584.198.19.135.33.332.438.533.105.259.158.459.166.724 0-.02.006-.04.006-.06v.105a.086.086 0 01-.004-.021l-.004-.024a1.807 1.807 0 01-.15.706.953.953 0 01-.213.335.71.71 0 01-.088.066c-.297.168-.623.336-.995.268-.4-.051-.811-.03-1.206-.125-.365-.086-.718-.224-1.054-.410-.243-.134-.460-.316-.605-.533-.18-.282-.188-.612-.244-.6-.201-1.052.806-1.688 1.429-1.688v-.018z"/>
						</svg>
					</div>
					<span class="text-xs md:text-sm font-medium" data-i18n="downloads.linux">Linux</span>
				</a>
			</div>
		</div>
	</div>
</div>
