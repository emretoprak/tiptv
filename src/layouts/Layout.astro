---
import "../styles/global.css";
import pkg from "../../package.json";

const version = pkg.version;
const buildTime = Date.now();
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="utf-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, viewport-fit=cover, user-scalable=no, maximum-scale=1, minimum-scale=1"
		/>
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>

		<!-- Cache Control -->
		<meta
			http-equiv="Cache-Control"
			content="no-cache, no-store, must-revalidate"
		/>
		<meta http-equiv="Pragma" content="no-cache" />
		<meta http-equiv="Expires" content="0" />
		<meta name="version" content={version} />
		<meta name="build-time" content={buildTime.toString()} />

		<title>TIPTV</title>
		<meta name="theme-color" content="#4f39f6" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/manifest.json" />
		<link
			href="https://vjs.zencdn.net/8.23.3/video-js.css"
			rel="stylesheet"
		/>
	</head>

	<body class="h-full antialiased bg-[#0b0820] text-gray-100" style="overflow: hidden; height: 100vh; height: 100dvh; max-height: 100vh; max-height: 100dvh;">
		<slot />
	</body>
</html>
